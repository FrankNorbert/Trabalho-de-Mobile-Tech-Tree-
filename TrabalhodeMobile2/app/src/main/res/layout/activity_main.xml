<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Core.MainActivity">

    <TextView
        android:id="@+id/Main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TECH-TREE pre-alpha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <TextView
        android:id="@+id/Select_option_text"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginTop="86dp"
        android:text="Selecione uma opção do menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Main_title" />

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="192dp"
        android:layout_height="25dp"
        android:layout_marginStart="222dp"
        android:layout_marginTop="29dp"
        android:text="Pimpaloos Corp, 2022/2023"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_logout" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="285dp"
        android:layout_height="59dp"
        android:text="Go Touch Some Grass (logout)"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.912" />

    <Button
        android:id="@+id/main_rig_builder_button"
        android:layout_width="128dp"
        android:layout_height="138dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="146dp"
        android:layout_marginBottom="179dp"
        android:text="Rig Builder"
        app:layout_constraintBottom_toTopOf="@+id/button_logout"
        app:layout_constraintEnd_toStartOf="@+id/main_information_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Select_option_text" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_information_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/button_logout"
        app:layout_constraintEnd_toStartOf="@+id/main_part_picker_button"
        app:layout_constraintStart_toEndOf="@+id/main_rig_builder_button"
        app:layout_constraintTop_toBottomOf="@+id/Select_option_text"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <Button
        android:id="@+id/main_part_picker_button"
        android:layout_width="128dp"
        android:layout_height="138dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="179dp"
        android:text="Part Helper"
        app:layout_constraintBottom_toTopOf="@+id/button_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_information_button"
        app:layout_constraintTop_toBottomOf="@+id/Select_option_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
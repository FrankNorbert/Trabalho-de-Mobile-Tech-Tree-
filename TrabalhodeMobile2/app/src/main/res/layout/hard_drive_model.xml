<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tipo_de_memória"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione um tipo de memória:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="65dp" />

    <Button
        android:id="@+id/ssd"
        android:layout_width="224dp"
        android:layout_height="54dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="92dp"
        android:text="SSD (Solid State Drive)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipo_de_memória" />

    <Button
        android:id="@+id/hdd"
        android:layout_width="224dp"
        android:layout_height="54dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="99dp"
        android:text="HDD (HARD DISK DRIVE)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ssd" />
</androidx.constraintlayout.widget.ConstraintLayout>
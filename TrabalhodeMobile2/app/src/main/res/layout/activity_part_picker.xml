<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartPicker.PartPickerActivity">

    <TextView
        android:id="@+id/part_picker_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:text="Select what you want"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/picker_cpu"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="288dp"
        android:text="cpu"
        app:layout_constraintEnd_toStartOf="@+id/picker_gpu"
        app:layout_constraintHorizontal_bias="0.203"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/picker_gpu"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="34dp"
        android:text="gpu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/part_picker_text" />

</androidx.constraintlayout.widget.ConstraintLayout>